#!/bin/sh
if ls | grep '^run$'; then
  rm ./run
fi

cd ${PWD}/build

if cmake ..; then
  echo "---------------------------------------------------"
  echo "CMake.. Success"
  echo "---------------------------------------------------"
  if make; then
    echo "---------------------------------------------------"
    echo "MakeFile.. Success"
    echo "---------------------------------------------------"

    cp ./prog ../run
    ../run
  else 
    echo "---------------------------------------------------"
    echo "MakeFile.. Failed"
    echo "---------------------------------------------------"
  fi
else
  echo "---------------------------------------------------"
  echo "CMake.. Failed"
  echo "---------------------------------------------------"
fi
